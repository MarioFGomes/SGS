@model IEnumerable<CodeReview.AppMvc.ViewModels.ProdutoViewModel>
@using CodeReview.AppMvc.Extensions

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/imagens/@item.Image" alt="@item.Image" style="width:70px; height:80px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>

                <td>
                    @item.Valor.ToString("C")
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-right">
                    <a href="@Url.Action("Details","Produto",new {id=item.id})" class="btn btn-warning"><span class="glyphicon glyphicon-search"></span></a>

                    @{
                        if (this.PermitirExibicao("Produto", "Editar"))
                        {
                            <a href="@Url.Action("Edit","Produto",new {id=item.id})" class="btn btn-info"><span class="glyphicon glyphicon-pencil"></span></a>
                        }
                                       
                        if (this.PermitirExibicao("Produto", "Excluir"))
                        {
                           <a href="@Url.Action("Delete","Produto",new {id=item.id})" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

